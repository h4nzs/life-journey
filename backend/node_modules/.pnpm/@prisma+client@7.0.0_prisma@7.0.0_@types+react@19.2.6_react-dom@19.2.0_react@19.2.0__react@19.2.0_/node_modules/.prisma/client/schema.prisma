generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  password  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  tokoh     TokohUtama?

  @@map("users")
}

model TokohUtama {
  id           String  @id @default(cuid())
  tekad        String?
  keimanan     String?
  kondisi_jiwa String?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  tujuan Tujuan[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tokoh_utama")
}

model Tujuan {
  id           String  @id @default(cuid())
  jenis_tujuan String
  hasil        String?

  tokoh   TokohUtama @relation(fields: [tokohId], references: [id], onDelete: Cascade)
  tokohId String

  perjalanan Perjalanan[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tujuan")
}

model Perjalanan {
  id        String  @id @default(cuid())
  arah      String
  ketahanan String?

  tujuan   Tujuan @relation(fields: [tujuanId], references: [id], onDelete: Cascade)
  tujuanId String

  rintangan Rintangan[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("perjalanan")
}

model Rintangan {
  id              String @id @default(cuid())
  jenis_rintangan String

  perjalanan   Perjalanan @relation(fields: [perjalananId], references: [id], onDelete: Cascade)
  perjalananId String

  emosi Emosi[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("rintangan")
}

model Emosi {
  id          String @id @default(cuid())
  jenis_emosi String

  rintangan   Rintangan @relation(fields: [rintanganId], references: [id], onDelete: Cascade)
  rintanganId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("emosi")
}
